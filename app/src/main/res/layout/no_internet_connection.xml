<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/no_internet_connection_background">

    <ImageView
        android:id="@+id/ivNoInternetLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/internet_connection_logo"/>

    <TextView
        android:id="@+id/tvNetworkErrorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivNoInternetLogo"
        android:layout_centerHorizontal="true"
        android:text="@string/no_internet_connection_message"
        android:textSize="@dimen/no_internet_connection_text"
        android:textColor="@color/quote_text"
        android:fontFamily="sans-serif-light"/>

    <Button
        android:id="@+id/btnNetworkTryAgain"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ivNoInternetLogo"
        android:background="@drawable/btn_favourites"
        android:text="@string/try_again_button_text"
        android:textColor="@color/try_again_button_text_color"/>

</RelativeLayout>